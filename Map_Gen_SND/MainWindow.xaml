<Window x:Class="Map_Gen_SND.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Map_Gen_SND"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1500">
    <Grid>
        <Menu x:Name="Menu" IsMainMenu="True" Height="20" Margin="10,0,0,0" VerticalAlignment="Top">
            <MenuItem Header="Main">
                <MenuItem Header="New Map" Command="{Binding newM}" InputGestureText="ctrl+n"/>
                <MenuItem Header="Save Map" Command="{Binding save}" InputGestureText="ctrl+s"/>
                <MenuItem Header="Export Map" Command="{Binding export}" InputGestureText="ctrl+e"/>
                <MenuItem Header="Export Project" Command="{Binding project}" InputGestureText="ctrl+d"/>
                <MenuItem Header="Quit" Command="{Binding quit}" InputGestureText="ctrl+q"/>





            </MenuItem>
        </Menu>
    </Grid>
</Window>
